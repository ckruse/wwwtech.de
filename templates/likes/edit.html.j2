{% extends "layout.html.j2" %}

{% block content %}
<header class="page-header">
  <h2>Edit like #{{like.id}}</h2>
</header>

{% if let Some(err) = error %}
<div class="alert alert-danger">{{err}}</div>
{% endif %}

<form method="post" action="{{self::like_uri(like)}}">
  {% include "likes/form.html.j2" %}

  <div class="actions">
    <button type="submit">save</button>
    <a href="{{self::likes_uri()}}" class="btn">cancel</a>
  </div>
</form>
{% endblock %}
